<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="/stylesheets/partials/post.css" />
    <link rel="stylesheet" href="/stylesheets/reset.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <%- include("./partials/navbar"); %>
    
    <% if (currentUser) { %>
    <div class="post-create-section">
      <div class="post-create-container">
        <div class="post-prompt">
          <p>Hello <%= currentUser.username %>,</p>
        </div>
        <form action="/post/create" method="POST">
          <textarea name="post" id="post" placeholder="Want to Post Something?"></textarea>
          <button>Post</button>
        </form>
      </div>
    </div>

    <% } %>
    
    <div class="posts-container">
      <% if (posts.length > 0) { %>
        <% posts.forEach(function(post){ %>
          <%- include("./partials/post", {post: post}); %>
        <% }); %>
      <% } else { %>
      <p>No posts</p>
      <% } %>
    </div>

    <script>
      // Makes the textarea grow with content.
      function autoSize(e) {
        e.style.height = "5px";
        e.style.height = e.scrollHeight + "px";
      }
    </script>
  </body>
</html>
